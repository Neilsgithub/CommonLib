<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_article"
    android:layout_width="match_parent"
    android:background="@null"
    app:contentInsetStart="0dp"
    app:contentInsetEnd="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="1dp"
    android:layout_height="44dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/bg_article_toolbar"
            android:background="@drawable/actionbar_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height"
            >

            <ImageView
                android:id="@+id/ic_article_toolbar_back"
                android:background="@drawable/bg_action_bar_item"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:paddingRight="30dp"
                android:paddingLeft="@dimen/thin_back_padding_left"
                android:src="@drawable/ic_back_icon"/>

            <ImageView
                android:id="@+id/ic_article_toolbar_more"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_action_bar_item"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:src="@drawable/ic_more"/>

            <ImageView
                android:id="@+id/ic_article_toolbar_comment"
                android:layout_toLeftOf="@+id/ic_article_toolbar_more"
                android:background="@drawable/bg_action_bar_item"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:paddingTop="14dp"
                android:paddingBottom="13dp"
                android:src="@drawable/icon_article_comment"/>

            <ImageView
                android:id="@+id/ic_article_toolbar_share"
                android:layout_toLeftOf="@+id/ic_article_toolbar_comment"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_action_bar_item"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:paddingTop="13dp"
                android:paddingBottom="13dp"
                android:src="@drawable/ic_share"/>

            <ImageView
                android:id="@+id/ic_article_toolbar_fav"
                android:layout_toLeftOf="@+id/ic_article_toolbar_share"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_action_bar_item"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:src="@drawable/ic_article_fav"/>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.Toolbar>
