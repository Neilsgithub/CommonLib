<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_base"
    android:layout_width="match_parent"
    app:contentInsetStart="0dp"
    android:background="@null"
    app:contentInsetEnd="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="1dp"
    android:layout_height="@dimen/toolbar_height">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/bg_category_page_toolbar"
            android:background="@drawable/actionbar_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="@dimen/toolbar_height"
            >

            <ImageView
                android:id="@+id/ic_base_toolbar_back"
                android:background="@drawable/bg_action_bar_item"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:paddingTop="11dp"
                android:paddingBottom="11dp"
                android:paddingLeft="13dp"
                android:paddingRight="11dp"
                android:src="@drawable/ic_full_back_icon"/>

            <com.suan.example.ui.widget.STextView
                android:id="@+id/text_base_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:textColor="@color/pure_white"
                app:textStyle="bold"
                android:textSize="17dp"/>

        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.Toolbar>
